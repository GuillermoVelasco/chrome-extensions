{
  "name" : "Add template data to calendar descriptions",
  "version" : "1.0.0",
  "description" : "Adds template data to calendar descriptions",
  "permissions" : [
    "tabs",
    "http://www.google.com/calendar/*",
    "https://www.google.com/calendar/*"
  ],
  "page_action" : {
    "default_icon" : "sample-19.png"
  },
  "options_page" : "options.html",
  "background_page" : "background.html",
  "content_scripts" : [
    {
      "matches" : [
        "http://www.google.com/calendar/*",
        "https://www.google.com/calendar/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "128" : "sample-128.png"
  }
}
